{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "preserve",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "./dist",
    "inlineSourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "@emotion/react",
    "paths": {
      "components": [
        "lib/components"
      ],
      "hooks": [
        "lib/hooks"
      ],
      "theme": [
        "lib/theme"
      ],
      "helpers": [
        "lib/helpers"
      ],
      "utils/pathMap": [
        "lib/utils/pathMap"
      ],
      "utils/csv": [
        "lib/utils/csv"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "stories",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
